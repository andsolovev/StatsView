<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StatsView">
        <attr name="fontSize" format="dimension|reference"/>
        <attr name="lineWidth" format="dimension|reference"/>
        <attr name="color1" format="color|reference"/>
        <attr name="color2" format="color|reference"/>
        <attr name="color3" format="color|reference"/>
        <attr name="color4" format="color|reference"/>
        <attr name="color_back" format="color|reference"/>
        <attr name="animationType" format="enum">
            <enum name="filling" value="0"/>
            <enum name="rotation" value="1"/>
            <enum name="sequential" value="2"/>
            <enum name="bidirectional" value="3"/>
        </attr>

    </declare-styleable>

</resources>